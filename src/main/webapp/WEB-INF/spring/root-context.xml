<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 
		DB관련 설정(mybatis 사용)
		DriverManagerDataSource : DB연동 클래스
		SqlSessionFactoryBean : SqlSessionTemplate 객체 생성
		SqlSessionTemplate : sqlSession 객체 생성
	 -->
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@192.168.0.55:1521:mdctdb"/>
        <property name="username" value="mdct_user"/>
        <property name="password" value="mdct"/>
    </bean>
    <!-- SqlSessionFactory 객체 주입 -->
    <!-- sqlSessionFactory는 dataSource를 참조 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <!-- mybtis 환경설정파일 위치 참조 -->
        <property name="configLocation" value="classpath:/mybatis-config.xml"/>
        <!-- mybatis mapper의 위치와 네이밍 규칙설정 -->
        <!-- classpath : src/main/resources를 의미 -->
        <!-- ** : 디렉토리를 의미 -->
        <!-- * : 파일명을 의미 -->
        <property name="mapperLocations" value="classpath:mappers/**/*Mapper.xml"/>
    </bean>
    
    <!-- SqlSession 객체 주입 -->
    <!-- sqlSession은 sqlSessionFactory를 참조 -->
    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
        <constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>	
</beans>
